generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id

  peranId Int

  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  role          String    @default("user")
  banned        Boolean   @default(false)

  instansi   Instansi?
  peserta    Peserta?
  peran      Peran?      @relation(fields: [peranId], references: [id])
  narasumber Narasumber?

  @@unique([email])
  @@map("user")
}

model Peran {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User[]

  @@map("peran")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model RegistrasiInstansi {
  id                         String                   @id @default(cuid())
  statusRegistrasiInstansi   StatusRegistrasiInstansi @relation(fields: [statusRegistrasiInstansiId], references: [id])
  statusRegistrasiInstansiId Int                      @default(1)
  nama                       String
  email                      String
  nomorTelepon               String
  desaKelurahan              String
  kecamatan                  String
  kabupatenKota              String
  desaKelurahanKode          String
  kecamatanKode              String
  kabupatenKotaKode          String
  password                   String
  alamat                     String
  createdAt                  DateTime                 @default(now())
  updatedAt                  DateTime                 @updatedAt
  registrasiPicInstansi      RegistrasiPicInstansi?
  instansi                   Instansi?

  @@map("registrasi_instansi")
}

model StatusRegistrasiInstansi {
  id                 Int                  @id @default(autoincrement())
  nama               String               @unique
  backgroundColor    String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  registrasiInstansi RegistrasiInstansi[]

  @@map("status_registrasi_instansi")
}

model RegistrasiPicInstansi {
  id                   Int                @id @default(autoincrement())
  registrasiInstansiId String             @unique
  registrasiInstansi   RegistrasiInstansi @relation(fields: [registrasiInstansiId], references: [id], onDelete: Cascade)
  nama                 String
  email                String
  nomorTelepon         String
  jabatan              String
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  picInstansi          PicInstansi?

  @@map("registrasi_pic_instansi")
}

model Instansi {
  id                   Int                @id @default(autoincrement())
  registrasiInstansiId String             @unique
  registrasiInstansi   RegistrasiInstansi @relation(fields: [registrasiInstansiId], references: [id])
  userId               String             @unique
  user                 User               @relation(fields: [userId], references: [id])
  nomorTelepon         String
  desaKelurahan        String
  kecamatan            String
  kabupatenKota        String
  desaKelurahnKode     String
  kecamatanKode        String
  kabupatenKotaKode    String
  alamat               String
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  picInstansi          PicInstansi?
  peserta              Peserta[]

  @@map("instansi")
}

model PicInstansi {
  id Int @id @default(autoincrement())

  instansiId Int @unique

  registrasiPicInstansiId Int                   @unique
  registrasiPicInstansi   RegistrasiPicInstansi @relation(fields: [registrasiPicInstansiId], references: [id])
  nama                    String
  email                   String
  nomorTelepon            String
  jabatan                 String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  instansi Instansi @relation(fields: [instansiId], references: [id])

  @@map("pic_instansi")
}

model Diklat {
  id String @id @default(cuid())

  metodeDiklatId            Int
  statusPendaftaranDiklatId Int

  judul                   String
  deskripsi               String?
  gambar                  String?
  tujuan                  String
  targetSasaran           String
  lokasi                  String
  maksimalKuota           Int
  tanggalBukaPendaftaran  DateTime
  tanggalTutupPendaftaran DateTime
  tanggalMulaiAcara       DateTime
  tanggalSelesaiAcara     DateTime
  persyaratanPeserta      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  metodeDiklat            MetodeDiklat?            @relation(fields: [metodeDiklatId], references: [id])
  statusPendaftaranDiklat StatusPendaftaranDiklat? @relation(fields: [statusPendaftaranDiklatId], references: [id])
  pesertaDiklat           PesertaDiklat[]
  materiDiklat            MateriDiklat[]

  @@map("diklat")
}

model StatusPendaftaranDiklat {
  id Int @id @default(autoincrement())

  nama            String @unique
  backgroundColor String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  diklat Diklat[]

  @@map("status_pendaftaran_diklat")
}

model MetodeDiklat {
  id Int @id @default(autoincrement())

  nama            String @unique
  backgroundColor String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  diklat Diklat[]

  @@map("metode_diklat")
}

model Peserta {
  id Int @id @default(autoincrement())

  userId       String       @unique
  instansiId   Int
  nik          String
  jabatan      String
  nomorTelepon String
  jenisKelamin JenisKelamin
  tanggalLahir DateTime
  tempatLahir  String
  alamat       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User            @relation(fields: [userId], references: [id])
  instansi      Instansi        @relation(fields: [instansiId], references: [id])
  pesertaDiklat PesertaDiklat[]

  @@unique([instansiId, nik])
  @@unique([instansiId, nomorTelepon])
  @@map("peserta")
}

enum JenisKelamin {
  Pria
  Wanita
}

model PesertaDiklat {
  id Int @id @default(autoincrement())

  diklatId                         String
  pesertaId                        Int
  statusDaftarPesertaDiklatId      Int    @default(1)
  statusPelaksanaanPesertaDiklatId Int?
  statusKelulusanPesertaDiklatId   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  diklat                         Diklat                          @relation(fields: [diklatId], references: [id])
  peserta                        Peserta                         @relation(fields: [pesertaId], references: [id])
  statusDaftarPesertaDiklat      StatusDaftarPesertaDiklat       @relation(fields: [statusDaftarPesertaDiklatId], references: [id])
  statusPelaksanaanPesertaDiklat StatusPelaksanaanPesertaDiklat? @relation(fields: [statusPelaksanaanPesertaDiklatId], references: [id])
  statusKelulusanPesertaDiklat   StatusKelulusanPesertaDiklat?   @relation(fields: [statusKelulusanPesertaDiklatId], references: [id])
  absensiPesertaDiklat           AbsensiPesertaDiklat[]

  @@unique([diklatId, pesertaId])
  @@map("peserta_diklat")
}

model StatusDaftarPesertaDiklat {
  id Int @id @default(autoincrement())

  nama String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PesertaDiklat PesertaDiklat[]

  @@map("status_daftar_peserta_diklat")
}

model StatusPelaksanaanPesertaDiklat {
  id Int @id @default(autoincrement())

  nama String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PesertaDiklat PesertaDiklat[]

  @@map("status_pelaksanaan_peserta_diklat")
}

model StatusKelulusanPesertaDiklat {
  id Int @id @default(autoincrement())

  nama String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PesertaDiklat PesertaDiklat[]

  @@map("status_kelulusan_peserta_diklat")
}

model Narasumber {
  id Int @id @default(autoincrement())

  userId String @unique

  nomorTelepon String
  jenisKelamin JenisKelamin

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User           @relation(fields: [userId], references: [id])
  materiDiklat MateriDiklat[]

  @@map("narasumber")
}

model MateriDiklat {
  id Int @id @default(autoincrement())

  diklatId     String
  narasumberId Int

  judul              String
  deskripsi          String
  fileMateri         String?
  lokasi             String?
  tanggalPelaksanaan DateTime
  waktuMulai         String
  waktuSelesai       String

  diklat     Diklat     @relation(fields: [diklatId], references: [id])
  narasumber Narasumber @relation(fields: [narasumberId], references: [id])

  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  absensiPesertaDiklat AbsensiPesertaDiklat[]

  @@map("materi_diklat")
}

model AbsensiPesertaDiklat {
  id Int @id @default(autoincrement())

  pesertaDiklatId Int
  materiDiklatId  Int
  statusAbsensiId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pesertaDiklat              PesertaDiklat              @relation(fields: [pesertaDiklatId], references: [id])
  materiDiklat               MateriDiklat               @relation(fields: [materiDiklatId], references: [id])
  statusAbsensiPesertaDiklat StatusAbsensiPesertaDiklat @relation(fields: [statusAbsensiId], references: [id])

  @@unique([pesertaDiklatId, materiDiklatId])
  @@map("absensi_peserta_diklat")
}

model StatusAbsensiPesertaDiklat {
  id Int @id @default(autoincrement())

  nama String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  AbsensiPesertaDiklat AbsensiPesertaDiklat[]

  @@map("status_absensi_peserta_diklat")
}
